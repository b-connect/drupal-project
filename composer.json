{
  "name": "b-connect/drupal-project",
  "description": "Project template for Drupal 8 projects with composer",
  "type": "project",
  "license": "GPL-2.0+",
  "authors": [
      {
          "name": "",
          "role": ""
      }
  ],
  "repositories": [{
    "type": "composer",
    "url": "https://packages.drupal.org/8"
  }],
  "require": {
      "composer/installers": "^1.2",
      "drupal-composer/drupal-scaffold": "^2.2",
      "cweagans/composer-patches": "~1.0",
      "wikimedia/composer-merge-plugin": "^1.3.0",
      "drupal/core": "~8.3",
      "drush/drush": "~8.0",
      "drupal/console": "~1.0",
      "monolog/monolog": "~1.0",
      "drupal/layout_plugin": "~1.0",
      "drupal/ds": "~3.0",
      "drupal/entity_reference_revisions": "~1.0",
      "drupal/pathauto": "~1.0",
      "drupal/token": "~1.0",
      "drupal/view_unpublished": "~1.0",
      "drupal/paragraphs": "~1.0",
      "drupal/media_entity": "~1.0",
      "drupal/media_entity_image": "~1.0",
      "drupal/media_entity_video": "~1.0",
      "drupal/media_entity_document": "~1.0",
      "drupal/video_embed_field": "~1.0",
      "drupal/taxonomy_access_fix" : "~2.0",
      "drupal/search_api": "~1.0",
      "drupal/page_manager": "~4.0",
      "drupal/panels": "~4.0",
      "drupal/entity_browser": "~1.0",
      "drupal/inline_entity_form": "~1.0",
      "drupal/monolog": "~1.0",
      "drupal/zurb_foundation": "~6.0",
      "drupal/admin_toolbar": "~1.0",
      "drupal/twig_extender": "~2.0"
  },
  "require-dev": {
    "geerlingguy/drupal-vm": "^4.5",
    "drupal/devel": "~1.0",
    "drupal/devel_mode": "~1.0"
  },
  "config": {
    "bin-dir": "bin/",
    "process-timeout": 4000,
    "discard-changes": true
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "extra": {
    "installer-paths": {
      "docroot/core": ["type:drupal-core"],
      "docroot/libraries/{$name}": ["type:drupal-library"],
      "docroot/modules/contrib/{$name}": ["type:drupal-module"],
      "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
      "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "merge-plugin": {
      "include": [
        "src/core/composer.json"
      ],
      "recurse": false,
      "replace": false,
      "merge-extra": false
    }
  },

  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "pre-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
      "DrupalProject\\composer\\ScriptHandler::displayHelp"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
      "DrupalProject\\composer\\ScriptHandler::displayHelp"
    ],
    "vm:setup": [
      "DrupalProject\\composer\\ScriptHandler::setupVm",
      "vagrant plugin install vagrant-hostsupdater",
      "vagrant plugin install vagrant-auto_network",
      "DrupalProject\\composer\\ScriptHandler::displayHelp"
    ],
    "vm:start": [
      "vagrant up"
    ],
    "vm:provision": [
      "vagrant up --provision"
    ]
  }
}
